<div class="column is-half">
      <h2 class="title">Signup</h2>

      <form class="signup-form">
        <div class="field">
          <label for="name-signup" class="label">Name:</label>
          <div class="control">
            <input class="input" type="text" id="name-signup" placeholder="Enter your name">
          </div>
        </div>

        <div class="field">
          <label for="email-signup" class="label">Email:</label>
          <div class="control">
            <input class="input" type="text" id="email-signup" placeholder="Enter your email">
          </div>
        </div>

        <div class="field">
          <label for="password-signup" class="label">Password:</label>
          <div class="control">
            <input class="input" type="password" id="password-signup" placeholder="Enter your password">
          </div>
        </div>

        <div class="field">
          <div class="control">
            <button class="button is-primary" type="submit">Signup</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

