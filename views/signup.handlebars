<div class="mt-5">
  <div class="column container column is-two-fifths  is-align-self-center is-half">
  <h2 class="title">Signup</h2>

  <form class="signup-form">
    <div class="field">
      <label for="username-signup" class="label">username:</label>
      <div class="control">
        <input class="input" type="text" id="username-signup" placeholder="Enter a username">
      </div>
    </div>

    <div class="field">
      <label for="password-signup" class="label">Password:</label>
      <div class="control">
        <input class="input" type="password" id="password-signup" placeholder="Enter a password">
      </div>
    </div>

    <div class="field">
      <div class="control">
        <button class="button is-primary" type="submit">Signup</button>
      </div>
    </div>
  </form>
</div>
</div>
<script src="../public/js/signup.js"></script>