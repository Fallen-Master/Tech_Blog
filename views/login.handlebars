<div class="columns">
  <div class="column is-half">
    <h2 class="title is-2">Login</h2>

    <form class="box login-form">
      <div class="field">
        <label for="username-login" class="label">Username:</label>
        <div class="control">
          <input class="input" type="text" id="username-login" placeholder="Enter your username" />
        </div>
      </div>
      <div class="field">
        <label for="password-login" class="label">Password:</label>
        <div class="control">
          <input class="input" type="password" id="password-login" placeholder="Enter your password" />
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button class="button is-primary" type="submit">Login</button>
        </div>
      </div>
    </form>
  </div>
  <div class="column is-half">
    <h2 class="title is-2">Signup</h2>

    <form class="box signup-form">
      <div class="field">
        <label for="name-signup" class="label">Name:</label>
        <div class="control">
          <input class="input" type="text" id="name-signup" placeholder="Enter your name" />
        </div>
      </div>
      <div class="field">
        <label for="username-signup" class="label">Username:</label>
        <div class="control">
          <input class="input" type="text" id="username-signup" placeholder="Choose a username" />
        </div>
      </div>
      <div class="field">
        <label for="password-signup" class="label">Password:</label>
        <div class="control">
          <input class="input" type="password" id="password-signup" placeholder="Choose a password" />
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button class="button is-primary" type="submit">Signup</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
